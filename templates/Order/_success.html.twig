{% extends 'Order/order.html.twig' %}

{% block form %}

    <div class="card-body">

        <div class="alert alert-success text-center" role="alert">
            <h4 class="alert-heading">{{ 'success'|trans }}</h4>
            <h5>{{ 'successMessage'|trans }}</h5>
            <p>{{ 'aMailHasBeenSent'|trans }}: <strong>{{ order.mail }}</strong></p>
            <p>{{ 'orderNumber'|trans }}: <strong>{{ order.orderNumber }}</strong>.</p>
            <p>{{ 'orderedOn'|trans }}: {{ order.orderDate|date('d/m/Y H:i') }}</p>
        </div>

    </div>

    <div class="card-footer">

        <a role="button" href="{{ path('app_homepage') }}" class="btn btn-primary"><i class="fas fa-home"></i> {{ 'backToHome'|trans }}</a>
    </div>

{% endblock %}