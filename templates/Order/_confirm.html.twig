{% extends 'Order/order.html.twig' %}

{% block form %}

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Last</th>
                <th scope="col">First</th>
                <th scope="col">Reduced price</th>
                <th scope="col">Price</th>
            </tr>
        </thead>
        <tbody>
            {% for ticket in tickets %}
            <tr>
                <th scope="row">{{ ticket.ticketnumber }}</th>
                <td>{{ ticket.lastname|capitalize }}</td>
                <td>{{ ticket.firstname|capitalize }}</td>
                <td>{% if ticket.reducedprice[0] is defined %}REDUC{% endif %}</td>
                <td>{{ ticket.ticketprice }}</td>
            </tr>
            {% endfor %}
            {#<tr>#}
                {#<th scope="row">2</th>#}
                {#<td>Jacob</td>#}
                {#<td>Thornton</td>#}
                {#<td>@fat</td>#}
            {#</tr>#}
            {#<tr>#}
                {#<th scope="row">3</th>#}
                {#<td>Larry</td>#}
                {#<td>the Bird</td>#}
                {#<td>@twitter</td>#}
            {#</tr>#}
        </tbody>
    </table>

    {{ form_start(form) }}

    <div class="card-body">

        {{ form_row(form.mail) }}

    </div>

    <div class="card-footer">
        <a role="button" href="{{ path('app_previous') }}" class="btn btn-primary"><i class="fas fa-angle-double-left"></i> {% trans %}order.previous_step{% endtrans %}</a>
        <button type="submit" class="btn btn-success">{% trans %}order.payment{% endtrans %} <i class="fas fa-angle-double-right"></i></button>
    </div>

    {{ form_end(form) }}

{% endblock %}