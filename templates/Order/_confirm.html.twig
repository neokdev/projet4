{% extends 'Order/order.html.twig' %}

{% block form %}

    <h4>Command #{{ order.ordernumber }}</h4>

    <h5>For {{ order.date|date("m/d/Y", "Europe/Paris") }}</h5>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Ticket #</th>
                <th scope="col">Last</th>
                <th scope="col">First</th>
                <th scope="col">Reduced price</th>
                <th scope="col">Price</th>
            </tr>
        </thead>
        <tbody>
            {% for ticket in tickets %}
            <tr>
                <th scope="row">{{ ticket.ticketnumber }}</th>
                <td>{{ ticket.lastname|capitalize }}</td>
                <td>{{ ticket.firstname|capitalize }}</td>
                <td>{% if ticket.reducedprice[0] is defined %}<i class="far fa-check-square"></i>{% endif %}</td>
                <td>{{ ticket.ticketprice|number_format(2, ',', ' ') }} €</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    {{ form_start(form) }}

    <div class="card-body">

        <div>
            <h5>Total price : {% if order.duration %}Day tickets{% else %}Half-day tickets{% endif %} : {{ order.orderprice|number_format(2, ',', ' ') }} €</h5>
        </div>

        {{ form_row(form.mail) }}

    </div>

    <div class="card-footer">
        <a role="button" href="{{ path('app_previous') }}" class="btn btn-primary"><i class="fas fa-angle-double-left"></i> {% trans %}order.previous_step{% endtrans %}</a>
        <button type="submit" class="btn btn-success">{% trans %}order.payment{% endtrans %} <i class="fas fa-angle-double-right"></i></button>
    </div>

    {{ form_end(form) }}

{% endblock %}