{% extends 'Order/order.html.twig' %}

{% block form %}

    {{ form_start(form) }}

    <div class="card-body">

        {{ form_row(form.mail) }}

    </div>

    <div class="card-footer">
        <a role="button" href="{{ path('app_previous') }}" class="btn btn-primary">{% trans %}order.previous_step{% endtrans %}</a>
        <button type="submit" class="btn btn-primary">{% trans %}order.next_step{% endtrans %}</button>
    </div>

    {{ form_end(form) }}

{% endblock %}