{% extends 'Order/order.html.twig' %}

{% block form %}

    {{ dump(tickets) }}

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Last</th>
                <th scope="col">First</th>
                <th scope="col">Handle</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">1</th>
                {% for ticket in tickets %}
                    <td>Mark</td>
                {% endfor %}
                <td>Otto</td>
                <td>@mdo</td>
            </tr>
            <tr>
                <th scope="row">2</th>
                <td>Jacob</td>
                <td>Thornton</td>
                <td>@fat</td>
            </tr>
            <tr>
                <th scope="row">3</th>
                <td>Larry</td>
                <td>the Bird</td>
                <td>@twitter</td>
            </tr>
        </tbody>
    </table>

    {{ form_start(form) }}

    <div class="card-body">

        {{ form_row(form.mail) }}

    </div>

    <div class="card-footer">
        <a role="button" href="{{ path('app_previous') }}" class="btn btn-primary"><i class="fas fa-angle-double-left"></i> {% trans %}order.previous_step{% endtrans %}</a>
        <button type="submit" class="btn btn-success">{% trans %}order.payment{% endtrans %} <i class="fas fa-angle-double-right"></i></button>
    </div>

    {{ form_end(form) }}

{% endblock %}